{
"name":"Lovac na sendviče",
"description":"Ocenite koliko je komentar na B92 ili Blicu zaslužio sendviča!",
"version":"0.3",
"manifest_version":2,
"icons": { 
    "48": "sandwich48.png",
    "128": "sandwich128.png"
},
"permissions": [ 
    "http://46.101.172.101/*",
    "storage",
    "http://www.blic.rs/*",
    "https://www.blic.rs/*"
],
"content_scripts": [
    {
      "matches": [
          "http://www.blic.rs/*",
          "https://www.blic.rs/*"
      ],
      "js": [
          "jquery-1.12.1.min.js", 
          "blic.js"
      ],
      "css": ["blic.css"]
    },
    {
      "matches": [
          "http://www.b92.net/*",
          "https://www.b92.net/*"
      ],
      "js": [
          "jquery-1.12.1.min.js", 
          "b92.js"
      ],
      "css": ["b92.css"]
    }
  ],
"background": {
    "scripts": ["background.js"]
    }
}

